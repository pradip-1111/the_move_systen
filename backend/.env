# Server Configuration
PORT=5000
NODE_ENV=development

# Database - MongoDB Atlas
MONGODB_URI = you mongo url

# JWT Secret (use a strong, random string)
JWT_SECRET= Your jwt
JWT_EXPIRES_IN=100d

# CORS
CLIENT_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: TMDB API for movie data
TMDB_API_KEY = your api key of the movie database
TMDB_ACCESS_TOKEN = your database access tokens
TMDB_BASE_URL=https://api.themoviedb.org/3 ## this is official website where you can get these tokens and API
